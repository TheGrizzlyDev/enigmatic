using 🔥, ✨, 💩, 👽️

first_rotor  = rotor(🔥 => 💩, ✨ => 🔥, 💩 => 👽️, 👽️ => ✨) starting at 🔥
second_rotor = rotor(🔥 => 🔥, ✨ => 👽️, 💩 => ✨, 👽️ => 💩) starting at ✨

plugboard    = plugboard(🔥 <=> 👽️, ✨ <=> 💩)

for emoji <- input
    first_rotor_state = first_rotor <- emoji
    first_rotor.step()

    second_rotor_state = second_rotor <- first_rotor_state
    second_rotor.step()

    out <- plugboard <- second_rotor_state


// V2
using 🔥, ✨, 💩, 👽️

rotors  = [
    rotor(🔥 => 💩, ✨ => 🔥, 💩 => 👽️, 👽️ => ✨) starting at 🔥,
    rotor(🔥 => 🔥, ✨ => 👽️, 💩 => ✨, 👽️ => 💩) starting at ✨
]

plugboard = plugboard(🔥 <=> 👽️, ✨ <=> 💩)

for ❓ <- input
    for rotor <- rotors
        ❓ = rotor <- ❓
        rotor.step()

    output <- plugboard <- ❓